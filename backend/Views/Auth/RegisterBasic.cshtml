@model AspnetCoreMvcFull.Models.ViewModels.RegisterViewModel
@{
  Layout = "_BlankLayout";
  ViewData["Title"] = "Register Basic - Pages";
}

@section PageStyles {
  <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}

@* ************** Content ************** *@

<div class="container-xxl">
  <div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner">

      <!-- Register Card -->
      <div class="card px-sm-6 px-0">
        <div class="card-body">
          <!-- Logo -->
          <div class="app-brand justify-content-center mb-6">
            <a href="/" class="app-brand-link gap-2">
              <span class="app-brand-logo demo">@await Html.PartialAsync("../_Partials/_Macros")</span>
              <span class="app-brand-text demo text-heading fw-bold">@TempData.Peek("appName")</span>
            </a>
          </div>
          <!-- /Logo -->
          <h4 class="mb-1">Adventure starts here ðŸš€</h4>
          <p class="mb-6">Make your app management easy and fun!</p>

          <form asp-action="RegisterBasic" method="post" class="mb-6">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-6">
              <label asp-for="FirstName" class="form-label">First Name</label>
              <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" autofocus>
              <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-6">
              <label asp-for="LastName" class="form-label">Last Name</label>
              <input asp-for="LastName" class="form-control" placeholder="Enter your last name">
              <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-6">
              <label asp-for="Email" class="form-label">Email</label>
              <input asp-for="Email" class="form-control" placeholder="Enter your email">
              <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-6 form-password-toggle">
              <label asp-for="Password" class="form-label">Password</label>
              <div class="input-group input-group-merge">
                <input asp-for="Password" class="form-control"
                  placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" />
                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
              </div>
              <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-6 form-password-toggle">
              <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
              <div class="input-group input-group-merge">
                <input asp-for="ConfirmPassword" class="form-control"
                  placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" />
                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
              </div>
              <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="my-8">
              <div class="form-check mb-0 ms-2">
                <input class="form-check-input" type="checkbox" id="terms-conditions" name="terms">
                <label class="form-check-label" for="terms-conditions">
                  I agree to
                  <a href="javascript:void(0);">privacy policy & terms</a>
                </label>
              </div>
            </div>
            <button class="btn btn-primary d-grid w-100" type="submit">Sign up</button>
          </form>

          <p class="text-center">
            <span>Already have an account?</span>
            <a href="/Auth/LoginBasic">
              <span>Sign in instead</span>
            </a>
          </p>
        </div>
      </div>
      <!-- Register Card -->
    </div>
  </div>
</div>

@section Scripts {
  @await Html.PartialAsync("_ValidationScriptsPartial")
}
