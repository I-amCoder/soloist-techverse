@{
    ViewData["Title"] = "Reports & Analytics";
    ViewData["container"] = "container-fluid";
}

<!-- Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="text-dark mb-1">
                            <i class="bx bx-chart me-2"></i>Reports & Analytics
                        </h4>
                        <p class="mb-0 text-muted">System overview and statistics</p>
                    </div>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bx bx-arrow-back me-1"></i>Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Stats -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card border-primary">
            <div class="card-body text-center">
                <i class="bx bx-users bx-lg mb-2 text-primary"></i>
                <h3 class="text-primary">@ViewBag.TotalUsers</h3>
                <small class="text-muted">Total Users</small>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card border-info">
            <div class="card-body text-center">
                <i class="bx bx-package bx-lg mb-2 text-info"></i>
                <h3 class="text-info">@ViewBag.TotalItems</h3>
                <small class="text-muted">Total Items</small>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card border-warning">
            <div class="card-body text-center">
                <i class="bx bx-list-check bx-lg mb-2 text-warning"></i>
                <h3 class="text-warning">@ViewBag.TotalClaims</h3>
                <small class="text-muted">Total Claims</small>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card border-success">
            <div class="card-body text-center">
                <i class="bx bx-check-circle bx-lg mb-2 text-success"></i>
                <h3 class="text-success">@ViewBag.SuccessRate%</h3>
                <small class="text-muted">Success Rate</small>
            </div>
        </div>
    </div>
</div>

<!-- Category Statistics -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="bx bx-category me-2"></i>Items by Category
                </h5>
            </div>
            <div class="card-body">
                @if (ViewBag.CategoryStats != null)
                {
                    @foreach (dynamic stat in ViewBag.CategoryStats)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span>@stat.Category</span>
                            <div class="d-flex align-items-center">
                                <div class="progress me-3" style="width: 100px; height: 8px;">
                                    <div class="progress-bar" style="width: @(stat.Count * 100 / ViewBag.TotalItems)%"></div>
                                </div>
                                <span class="badge bg-light text-dark">@stat.Count</span>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="bx bx-trending-up me-2"></i>Resolution Statistics
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <h3 class="text-success">@ViewBag.ResolvedItems</h3>
                        <small class="text-muted">Resolved Items</small>
                    </div>
                    <div class="col-6">
                        <h3 class="text-warning">@(ViewBag.TotalItems - ViewBag.ResolvedItems)</h3>
                        <small class="text-muted">Active Items</small>
                    </div>
                </div>
                <div class="progress mt-3" style="height: 20px;">
                    <div class="progress-bar bg-success"
                        style="width: @(ViewBag.TotalItems > 0 ? ViewBag.ResolvedItems * 100 / ViewBag.TotalItems : 0)%">
                        @(ViewBag.TotalItems > 0 ? ViewBag.ResolvedItems * 100 / ViewBag.TotalItems : 0)%
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="bx bx-cog me-2"></i>System Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a asp-action="Users" class="btn btn-outline-primary w-100">
                            <i class="bx bx-users me-2"></i>Manage Users
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-action="Items" class="btn btn-outline-info w-100">
                            <i class="bx bx-package me-2"></i>Manage Items
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-action="Claims" class="btn btn-outline-success w-100">
                            <i class="bx bx-list-check me-2"></i>Manage Claims
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <button class="btn btn-outline-warning w-100" onclick="exportData()">
                            <i class="bx bx-download me-2"></i>Export Data
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function exportData() {
        alert('Export functionality would be implemented here');
    }
</script>